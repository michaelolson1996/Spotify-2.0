<Window x:Class="Spotify_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotify_2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="UserSearchBox" Height="25" Width="150"  Text="Search User" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
        <Button x:Name="SearchUserBtn" Height="30" Click="SearchUserBtn_Click" Content="Search" HorizontalAlignment="Left"  Grid.Column="1" Grid.Row="0"/>
        <TextBlock x:Name="Song_Text_Block" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Height="257" Width="180" Grid.Column="3" Grid.Row="1"/>
        <TextBlock x:Name="Playlist_Text_Block" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Height="257" Width="180" Grid.Column="0" Grid.Row="1"/>
        <TextBlock x:Name="Artist_Name" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Height="257" Width="180" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="Album_name" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Height="257" Width="180" Grid.Column="2" Grid.Row="1"/>
        <Label Content="Playlist" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0" Grid.Row="1"/>
        <Label Content="Artist name" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
        <Label Content="Album Name" HorizontalAlignment="center" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" />
        <Label Content="Song Name" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1"/>
    </Grid>
</Window>